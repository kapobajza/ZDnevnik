import rules/cors

{
	debug
}

http://api.zdnevnik.local {
	import cors http://zdnevnik.local

	encode gzip

	handle {
  	reverse_proxy http://api:5050
	}

	error "Not found" 404

	handle_errors {
		respond "{err.status_code} {err.status_text}"
	}
}

http://zdnevnik.local {
	reverse_proxy http://web:3000
}